# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here  # Generate a secure random string

# Database Configuration
DATABASE_URL=postgresql://localhost/api_key_manager

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id  # Get this from Google Cloud Console
GOOGLE_CLIENT_SECRET=your-google-client-secret  # Get this from Google Cloud Console

# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key-here  # Get this from Stripe Dashboard
STRIPE_PUBLIC_KEY=your-stripe-public-key-here  # Get this from Stripe Dashboard
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret  # Get this from Stripe Dashboard

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com  # For Gmail
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com  # Your Gmail address
MAIL_PASSWORD=your-app-specific-password  # App-specific password from Gmail

# Application Settings
API_KEY_EXPIRY_DAYS=30  # Number of days before API key expires
MAX_API_KEYS_PER_USER=10  # Maximum number of API keys per user

# Security Settings
SESSION_COOKIE_SECURE=True  # Set to False if not using HTTPS
REMEMBER_COOKIE_SECURE=True  # Set to False if not using HTTPS
SESSION_COOKIE_HTTPONLY=True  # Prevent JavaScript access to session cookie
SESSION_COOKIE_SAMESITE='Lax'  # CSRF protection
